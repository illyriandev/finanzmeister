    <!-- Alpine.js Dashboard Data -->
    <script lang="js">
        function dashboard() {
            return {
                init() {
                    this.initRevenueChart();
                    this.initExpenseChart();
                    this.initCashFlowChart();
                },
                initRevenueChart() {
                    const ctx = document.getElementById('revenueChart').getContext('2d');
                    const monthlyRevenue = [
                        { name: "Jan", revenue: 4200 },
                        { name: "Feb", revenue: 3800 },
                        { name: "Mar", revenue: 5100 },
                        { name: "Apr", revenue: 4700 },
                        { name: "May", revenue: 5600 },
                        { name: "Jun", revenue: 6100 },
                        { name: "Jul", revenue: 5900 },
                        { name: "Aug", revenue: 6300 },
                        { name: "Sep", revenue: 7100 },
                        { name: "Oct", revenue: 6800 },
                        { name: "Nov", revenue: 7400 },
                        { name: "Dec", revenue: 8200 },
                    ];
                    
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: monthlyRevenue.map(item => item.name),
                            datasets: [{
                                label: 'Revenue',
                                data: monthlyRevenue.map(item => item.revenue),
                                backgroundColor: 'rgba(14, 165, 233, 0.2)',
                                borderColor: 'rgba(14, 165, 233, 1)',
                                borderWidth: 2,
                                tension: 0.3,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function(value) {
                                            return '€' + value;
                                        }
                                    }
                                }
                            },
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return '€' + context.parsed.y;
                                        }
                                    }
                                }
                            }
                        }
                    });
                },
                initExpenseChart() {
                    const ctx = document.getElementById('expenseChart').getContext('2d');
                    const expenseCategories = [
                        { name: "Office", value: 1200 },
                        { name: "Marketing", value: 800 },
                        { name: "Software", value: 600 },
                        { name: "Travel", value: 400 },
                        { name: "Other", value: 300 },
                    ];
                    
                    new Chart(ctx, {
                        type: 'pie',
                        data: {
                            labels: expenseCategories.map(item => item.name),
                            datasets: [{
                                data: expenseCategories.map(item => item.value),
                                backgroundColor: [
                                    'rgba(14, 165, 233, 0.7)',
                                    'rgba(34, 197, 94, 0.7)',
                                    'rgba(245, 158, 11, 0.7)',
                                    'rgba(139, 92, 246, 0.7)',
                                    'rgba(239, 68, 68, 0.7)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const value = context.parsed;
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = Math.round((value / total) * 100);
                                            return `${context.label}: €${value} (${percentage}%)`;
                                        }
                                    }
                                }
                            }
                        }
                    });
                },
                initCashFlowChart() {
                    const ctx = document.getElementById('cashFlowChart').getContext('2d');
                    const cashFlowData = [
                        { name: "Jan", income: 4200, expenses: 3100 },
                        { name: "Feb", income: 3800, expenses: 2900 },
                        { name: "Mar", income: 5100, expenses: 3400 },
                        { name: "Apr", income: 4700, expenses: 3200 },
                        { name: "May", income: 5600, expenses: 3800 },
                        { name: "Jun", income: 6100, expenses: 4100 },
                    ];
                    
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: cashFlowData.map(item => item.name),
                            datasets: [
                                {
                                    label: 'Income',
                                    data: cashFlowData.map(item => item.income),
                                    backgroundColor: 'rgba(14, 165, 233, 0.7)',
                                    borderColor: 'rgba(14, 165, 233, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Expenses',
                                    data: cashFlowData.map(item => item.expenses),
                                    backgroundColor: 'rgba(239, 68, 68, 0.7)',
                                    borderColor: 'rgba(239, 68, 68, 1)',
                                    borderWidth: 1
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        callback: function(value) {
                                            return '€' + value;
                                        }
                                    }
                                }
                            },
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return context.dataset.label + ': €' + context.parsed.y;
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }
        }
        
        // Initialize charts when the page loads
